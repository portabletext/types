{
  "name": "@portabletext/types",
  "version": "2.0.0",
  "description": "Shared TypeScript definitions for core Portable Text data structures",
  "type": "module",
  "types": "./dist/index.d.ts",
  "source": "./src/index.ts",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "source": "./src/index.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "sideEffects": false,
  "engines": {
    "node": "^14.13.1 || >=16.0.0 || >=18.0.0"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "docs": "typedoc",
    "test": "eslint . && npm run build && node test/test.js",
    "prepublishOnly": "npm run build && npm run test",
    "build": "pkg-utils build"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/portabletext/types.git"
  },
  "keywords": [
    "portable-text"
  ],
  "author": "Sanity.io <hello@sanity.io>",
  "license": "MIT",
  "devDependencies": {
    "@sanity/pkg-utils": "^1.15.0",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-sanity": "^5.1.0",
    "prettier": "^2.5.1",
    "typedoc": "^0.22.11",
    "typescript": "^4.5.4"
  },
  "bugs": {
    "url": "https://github.com/portabletext/types/issues"
  },
  "homepage": "https://github.com/portabletext/types#readme",
  "prettier": {
    "semi": false,
    "printWidth": 100,
    "bracketSpacing": false,
    "singleQuote": true
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 9,
      "sourceType": "module",
      "ecmaFeatures": {
        "modules": true
      }
    },
    "extends": [
      "sanity",
      "sanity/typescript",
      "prettier"
    ],
    "ignorePatterns": [
      "lib/**/"
    ]
  }
}
