{
  "name": "@portabletext/types",
  "version": "3.0.0",
  "description": "Shared TypeScript definitions for core Portable Text data structures",
  "keywords": [
    "portable-text"
  ],
  "homepage": "https://github.com/portabletext/types#readme",
  "bugs": {
    "url": "https://github.com/portabletext/types/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/portabletext/types.git"
  },
  "license": "MIT",
  "author": "Sanity.io <hello@sanity.io>",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "source": "./src/index.ts",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "pkg-utils build --strict --check --clean",
    "docs:build": "typedoc",
    "format": "oxfmt .",
    "lint": "oxlint --deny-warnings --report-unused-disable-directives",
    "node:test": "node test/test.js",
    "prepublishOnly": "run-s build test",
    "release": "changeset publish",
    "test": "run-s build node:test"
  },
  "lint-staged": {
    "*": [
      "oxfmt"
    ]
  },
  "browserslist": "extends @sanity/browserslist-config",
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@sanity/browserslist-config": "^1.0.5",
    "@sanity/pkg-utils": "^9.2.3",
    "npm-run-all2": "^8.0.4",
    "oxfmt": "^0.17.0",
    "oxlint": "^1.32.0",
    "typedoc": "^0.28.15",
    "typescript": "5.9.3"
  },
  "packageManager": "pnpm@10.25.0",
  "engines": {
    "node": ">=20.19 <22 || >=22.12"
  },
  "publishConfig": {
    "access": "public"
  }
}
