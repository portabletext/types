{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "ignorePatterns": [
    "dist/**",
    "coverage/**",
    "docs/**",
    ".nyc_output/**"
  ],
  "rules": {
    "no-console": "error"
  },
  "overrides": [
    {
      "files": ["test/**"],
      "rules": {
        "no-console": "off"
      }
    }
  ]
}
