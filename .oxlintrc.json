{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "ignorePatterns": ["dist/**", "coverage/**", "docs/**", ".nyc_output/**"],
  "categories": {
    "correctness": "error",
    "suspicious": "warn"
  },
  "rules": {
    "no-console": "error"
  },
  "overrides": [
    {
      "files": ["test/**"],
      "rules": {
        "no-console": "off"
      }
    }
  ]
}
